{
  "name": "api",
  "license": "AGPL-3.0-only",
  "main": "index.js",
  "engines": {
    "npm": ">=8.5.5",
    "node": ">=16.15.0"
  },
  "scripts": {
    "test": "jest",
    "build": "npx tsc",
    "start": "node bin/index.js",
    "start:dev": "nodemon bin/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q bin/index.js\"",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:docs": "npx prisma-docs-generator serve"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@jest-mock/express": "^2.0.1",
    "@prisma/client": "^4.7.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
    "@types/node": "^14.18.33",
    "@types/node-cache": "^4.2.5",
    "@types/node-fetch": "^2.6.2",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "jest": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^2.0.20",
    "prisma": "^4.7.0",
    "prisma-docs-generator": "^0.5.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@sentry/integrations": "^7.28.0",
    "@sentry/node": "^7.26.0",
    "cors": "^2.8.5",
    "ethers": "^5.7.2",
    "express": "^4.17.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.6",
    "yup": "^0.32.11"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn lint:fix",
    "*.{js,jsx,ts,tsx,md}": "prettier --write ."
  },
  "jest": {
    "resetMocks": false,
    "preset": "ts-jest",
    "setupFiles": [
      "dotenv/config"
    ],
    "modulePathIgnorePatterns": [
      "bin"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/api/node_modules/(?!(@spruceid))/"
    ]
  }
}
