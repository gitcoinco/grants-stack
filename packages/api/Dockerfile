FROM node:18-slim as base

RUN apt-get update && apt-get install -y openssl libssl-dev

WORKDIR /src

COPY package*.json .
COPY prisma/ prisma/
COPY src/ src/

ENV NODE_OPTIONS=--max_old_space_size=8192

FROM base as dev
ENV NODE_ENV=development
RUN yarn global add nodemon && yarn install

EXPOSE 8000
CMD ["nodemon", "bin/www"]
 