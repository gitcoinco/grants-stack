{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build"
      ],
      "outputMode": "new-only"
    },
    "api#build": {
      "env": [
        "PORT",
        "POSTGRES_USER",
        "POSTGRES_DB",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_PORT",
        "DATABASE_URL",
        "SUBGRAPH_MAINNET_API",
        "SUBGRAPH_GOERLI_API",
        "SUBGRAPH_OPTIMISM_MAINNET_API",
        "SENTRY_DSN",
        "OPTIMISM_ETHERSCAN_API"
      ],
      "outputs": [
        "bin"
      ]
    },
    "graph#test": {
      "dependsOn": ["pnpm prepare:local", "pnpm codegen", "pnpm build"]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts"
      ],
      "outputMode": "new-only"
    },
    "lint:ci": {
      "outputMode": "errors-only"
    },
    "typecheck": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts"
      ],
      "outputMode": "errors-only"
    }
  }
}
